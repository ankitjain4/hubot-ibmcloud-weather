{
  "name": "hubot-ibmcloud-weather",
  "version": "0.0.21",
  "description": "hubot - The Weather Channel",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/ibm-cloud-solutions/hubot-ibmcloud-weather",
    "type": "git"
  },
  "publishConfig": {
    "registry": "http://bot-npm.ng.bluemix.net"
  },
  "scripts": {
    "start": ". config/env && hubot -a shell",
    "slack": ". config/env && hubot -a slack",
    "facebook": ".  config/env && hubot -a fb",
    "lint": "eslint src/**/*.js test/**/*.js index.js",
    "postinstall": "initDb src/nlc/NLC.json",
    "test": ". test/.env && mocha --compilers --require ./node_modules/coffee-script/register --compilers coffee:coffee-script test",
    "coverage": ". test/.env && istanbul cover -x '**/tools/**' --include-all-sources --report lcov --report cobertura --report text --dir ./gh-pages/coverage _mocha -- test"
  },
  "keywords": [
    "hubot",
    "hubot-scripts",
    "bluemix",
    "cloud",
    "slack",
    "weather"
  ],
  "author": "Norman Barker <nbarker@us.ibm.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "coffee-script": "^1.10.0",
    "eslint": "^2.9.0",
    "eslint-config-strongloop": "^2.0.1",
    "hubot": "^2.19.0",
    "hubot-fb": "^3.0.0",
    "hubot-help": "^0.2.0",
    "hubot-ibmcloud-auth": ">=0.0.14",
    "hubot-ibmcloud-nlc": ">=0.0.25",
    "hubot-shell": "^1.0.2",
    "hubot-slack": "^3.4.2",
    "hubot-test-helper": "^1.4.4",
    "istanbul": "0.4.0",
    "istanbul-cobertura-badger": "1.2.1",
    "mocha": "^2.4.5",
    "mocha-sprinkles": "^2.2.1",
    "nock": "^8.0.0",
    "shelljs": "^0.7.0"
  },
  "peerDependencies": {
    "hubot": "^2.19.0",
    "hubot-ibmcloud-formatter": ">=0.0.29",
    "i18n-2": "^0.6.3"
  },
  "engines": {
    "node": ">= 4.2.0"
  },
  "files": [
    "src",
    "index.js"
  ],
  "dependencies": {
    "hubot-conversation": "^1.1.1",
    "hubot-ibmcloud-cognitive-lib": ">=0.0.26",
    "hubot-ibmcloud-activity-emitter": ">=0.0.3",
    "hubot-ibmcloud-utils": ">=0.0.8",
    "lodash": "^4.13.1",
    "request": "^2.72.0",
    "watson-developer-cloud": "^1.9.4"
  }
}
